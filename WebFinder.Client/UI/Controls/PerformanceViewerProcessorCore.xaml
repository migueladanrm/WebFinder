<UserControl x:Class="WebFinder.UI.Controls.PerformanceViewerProcessorCore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebFinder.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Border Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="lblDescription" Content="Núcleo 0" VerticalContentAlignment="Center" Grid.Column="0" HorizontalAlignment="Right" Padding="0,0,5,0"/>

            <ProgressBar x:Name="pbar" Grid.Column="1" Height="15" VerticalAlignment="Center"/>

            <Label x:Name="lblCurrentPercent" Content="0 %" VerticalContentAlignment="Center" Grid.Column="2" FontFamily="Segoe UI Semibold" Foreground="Gray"/>
        </Grid>
    </Border>
</UserControl>
